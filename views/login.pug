doctype html
html(lang='en')
  head
    //  Required meta tags 
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1,shrink-to-fit=no')
    link(rel='icon' href='img/favicon.png' type='image/png')
    title Web Watch
    //  Bootstrap CSS 
    link(rel='stylesheet' href='css/bootstrap.css')
    link(rel='stylesheet' href='vendors/linericon/style.css')
    link(rel='stylesheet' href='css/font-awesome.min.css')
    link(rel='stylesheet' href='vendors/owl-carousel/owl.carousel.min.css')
    link(rel='stylesheet' href='vendors/lightbox/simpleLightbox.css')
    link(rel='stylesheet' href='vendors/nice-select/css/nice-select.css')
    link(rel='stylesheet' href='vendors/animate-css/animate.css')
    //  main css 
    link(rel='stylesheet' href='css/style.css')
    link(rel='stylesheet' href='css/responsive.css')
  body
    // ================Header Menu Area =================
    header.header_area
      .main_menu
        nav.navbar.navbar-expand-lg.navbar-light
          .container.box_1620
            //  Brand and toggle get grouped for better mobile display 
            // <a class="navbar-brand logo_h" href="index.html"><img src="img/logo.png" alt="WebWatch"></a>
            h2.nav-header WebWatch
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            //  Collect the nav links, forms, and other content for toggling 
            .collapse.navbar-collapse.offset#navbarSupportedContent
              ul.nav.navbar-nav.menu_nav.justify-content-center
                li.nav-item.active
                  a.nav-link(href='/') Home
                li.nav-item
                  a.nav-link(href='/about-us') About
                li.nav-item
                  a.nav-link(href='/show-websites') Show Websites
                li.nav-item
                  a.nav-link(href='/save-website') Save Website
                li.nav-item
                  a.nav-link(href='/contact') Contact
              ul.nav.navbar-nav.navbar-right
                li.nav-item
                  a.tickets_btn(href='/sign-up') Sign Up
    // ================Header Menu Area =================
    // ================Home Banner Area =================
    section.banner_area
      .banner_inner.d-flex.align-items-center
        .overlay.bg-parallax(data-stellar-ratio='0.9' data-stellar-vertical-offset='0' data-background)
        .container
          .banner_content.text-center
            h2 Login
            .page_link
              a(href='/index') Home
              a(href='/login') Login
    // ================End Home Banner Area =================
    // ================Login Form Area =================
    section.made_life_area.made_white.p_120
      .container
        .row.made_life_text
          .row
            form(action='/login' method='POST')
              h3 Login
              p
                | Email
                br
                input.single-input(type='email' name='email' placeholder='name@example.com' onfocus='this.placeholder = \'name@example.com\'' onblur='this.placeholder = \'name@example.com\'' required)
              br
              p
                | Password
                br
                input.single-input(type='password' name='password' placeholder='asdfasdfas' onfocus='this.placeholder = \'asdfasdfas\'' onblur='this.placeholder = \'asdfasdfas\'' required)
              input.main_btn.success-border(type='submit' value='Login')
    // ================End Login Form Area =================
    // ================Footer Area =================
    footer.footer_area.p_120
      .container
        .row.footer_inner
          .col-lg-10.col-sm-8
            aside.f_widget.news_widget
              .f_title
                h3 About Us
              p
                | Addres: Limesstrasse 12, 4060 Leonding
                br
                | Email: me@example.com
              p
                | Copyright Â©
                script document.write(new Date().getFullYear());
                | All rights reserved | This template is made with 
                i.fa.fa-heart-o(aria-hidden='true')
                |  by 
                a(href='https://colorlib.com' target='_blank') Colorlib
    // ================End Footer Area =================
