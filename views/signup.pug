doctype html
html(lang='en')
  head
    include inc/header.pug
  body
    // ================Header Menu Area =================
    header.header_area
        .main_menu
            nav.navbar.navbar-expand-lg.navbar-light
                .container.box_1620
                    h2.nav-header WebWatch
                    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    .collapse.navbar-collapse.offset#navbarSupportedContent
                        ul.nav.navbar-nav.menu_nav.justify-content-center
                            li.nav-item.active
                                a.nav-link(href='/') Home
                            li.nav-item
                                a.nav-link(href='/about-us') About
                            li.nav-item
                                a.nav-link(href='/show-websites') Show Websites
                            li.nav-item
                                a.nav-link(href='/save-website') Save Website
                            li.nav-item
                                a.nav-link(href='/contact') Contact
                            ul.nav.navbar-nav.navbar-right
                        if username != undefined
                            a.tickets_btn(href='/logout') Log Out
                        else
                            a.tickets_btn(href='/login') Login
            // ================Header Menu Area =================
    // ================Home Banner Area =================
    section.banner_area
      .banner_inner.d-flex.align-items-center
        .overlay.bg-parallax(data-stellar-ratio='0.9' data-stellar-vertical-offset='0' data-background='')
        .container
          .banner_content.text-center
            h2 Sign Up
            .page_link
              a(href='/index') Home
              a(href='/sign-up') Sign Up
    // ================End Home Banner Area =================
    include inc/notification.pug
    // ================Sign Up Form Area =================
    section.made_life_area.made_white.p_120
      .container
        .row.made_life_text
          form(action='/sign-up' method='POST')
            h3 Sign Up
            .row
              .col-sm-6
                p
                  | First Name
                  br
                  input.single-input(type='text' name='first_name' placeholder='Max' onfocus="this.placeholder = 'Max'" onblur="this.placeholder = 'Max'" required='')
              .col-sm-6
                p
                  | Last name
                  br
                  input.single-input(type='text' name='last_name' placeholder='Mustermann' onfocus="this.placeholder = 'Mustermann'" onblur="this.placeholder = 'Mustermann'" required='')
            br
            p
              | Email
              br
              input.single-input(type='email' name='email' placeholder='name@example.com' onfocus="this.placeholder = 'name@example.com'" onblur="this.placeholder = 'name@example.com'" required='')
            br
            .row
              .col-sm-6
                p
                  | Password
                  br
                  input.single-input(type='password' name='password' placeholder='password' onfocus="this.placeholder = 'password'" onblur="this.placeholder = 'password'" required='')
              .col-sm-6
                p
                  | Repeat Password
                  br
                  input.single-input(type='password' name='repeat_password' placeholder='password' onfocus="this.placeholder = 'password'" onblur="this.placeholder = 'password'" required='')
            input.main_btn.success-border(type='submit' value='Sign Up')
            a(href="/login" style="margin-left:30px;") Already have an account? Login
    // ================End Sign Up Form Area =================
    include inc/footer.pug
