// ================Header Menu Area =================
header.header_area
  .main_menu
    nav.navbar.navbar-expand-lg.navbar-light
      .container.box_1620
        // Brand and toggle get grouped for better mobile display
        // <a class="navbar-brand logo_h" href="index.html"><img src="img/logo.png" alt="WebWatch"></a>
        h2.nav-header WebWatch
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        // Collect the nav links, forms, and other content for toggling
        #navbarSupportedContent.collapse.navbar-collapse.offset
          ul.nav.navbar-nav.menu_nav.justify-content-center
            li.nav-item.active
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/about-us') About
            li.nav-item
              a.nav-link(href='/show-websites') Show Websites
            li.nav-item
              a.nav-link(href='/save-website') Save Website
            li.nav-item
              a.nav-link(href='/contact') Contact
          ul.nav.navbar-nav.navbar-right
            li.nav-item
              a.tickets_btn(href='/login') Log in
// ================Header Menu Area =================
// ================Home Banner Area =================
section.banner_area
  .banner_inner.d-flex.align-items-center
    .overlay.bg-parallax(data-stellar-ratio='0.9' data-stellar-vertical-offset='0' data-background='')
    .container
      .banner_content.text-center
        h2 Save Website
        .page_link
          a(href='/index') Home
          a(href='/save-website') Save Website
// ================End Home Banner Area =================
// ================Made Life Area =================
section.made_life_area.made_white.p_120
  .container
    .made_life_inner
      .row.made_life_text
        .col-lg-6
          .chart_img
            img.img-fluid(src='img/banner/home-left-1.png' alt='')
        .col-lg-6
          form(action='/save' method='POST')
            h3 Save a Snapshot
            p URL:
            input.single-input(type='url' name='url' placeholder='https://example.com' onfocus="this.placeholder = ''" onblur="this.placeholder = 'https://example.com'" required='')
            input.main_btn.success-border(type='submit' href='#' value='Submit')
// ================End Made Life Area =================
