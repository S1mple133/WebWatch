doctype html
html(lang='en')
  head
    include inc/header.pug
  body
    include inc/navbar.pug
    // ================Home Banner Area =================
    section.banner_area
      .banner_inner.d-flex.align-items-center
        .overlay.bg-parallax(data-stellar-ratio='0.9' data-stellar-vertical-offset='0' data-background='')
        .container
          .banner_content.text-center
            h2 Show Websites
            .page_link
              a(href='/index') Home
              a(href='/show-websites') Show Websites
    // ================End Home Banner Area =================
    // ================Table Area =================
    .whole-wrap
      .container
        .section-top-border
          h3.mb-30.title_color Websites
          table(class='table')
            thead(class='grey lighten-15')
                tr
                    th(scope='col') #
                    th(scope='col') Website
                    th(scope='col').hash-text Hash
                    th(scope='col') PDF
                    th(scope='col') HTML
            tbody
                - var index = 1
                each website in websites
                    tr
                        th #{index}
                        td #{website.website}
                        td.hash-text
                            div #{website.hash}
                        td
                            a(href=website.pdf)
                                button(type='button' class='btn btn-primary') PDF Download
                        td
                            a(href=website.html download)
                                button(type='button' class='btn btn-secondary') HTML Download
                    - index = index +1
    // ================End Table Area =================
    include inc/footer.pug
    script(src='js/jquery-3.2.1.min.js')
    script(src='js/popper.js')
    script(src='js/bootstrap.min.js')
    script(src='js/stellar.js')
    script(src='vendors/lightbox/simpleLightbox.min.js')
    script(src='vendors/nice-select/js/jquery.nice-select.min.js')
    script(src='vendors/isotope/imagesloaded.pkgd.min.js')
    script(src='vendors/isotope/isotope-min.js')
    script(src='vendors/owl-carousel/owl.carousel.min.js')
    script(src='js/jquery.ajaxchimp.min.js')
    script(src='js/mail-script.js')
    script(src='vendors/counter-up/jquery.waypoints.min.js')
    script(src='vendors/counter-up/jquery.counterup.min.js')
    script(src='js/theme.js')
